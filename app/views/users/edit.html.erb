<%= form_with model: @user, url: user_path(@user), method: :patch do |form| %>
  <%= form.label :name, "Name:" %>
  <%= form.text_field :name, placeholder: "Your name goes here" %>
  <%= form.label :email, "Email:" %>
  <%= form.email_field :email, placeholder: "example@example.com" %>
  <%= form.label :password, "Password:" %>
  <%= form.password_field :password, placeholder: "Password here" %>
  <%= form.submit "Submit" %>
<% end %>